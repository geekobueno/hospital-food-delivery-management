generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  username    String @unique
  password    String
  role    String @default("ADMIN")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  @@map("users")
}

model Disease {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  patientIDs  String[]   @db.ObjectId
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  @@map("diseases")
}

model Patient {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  diseaseIDs       String[]   @db.ObjectId
  allergies        String
  room_num         Int
  bed_num          Int
  floor_num        Int
  age              Int
  gender           String
  contact_info     Contact
  emergency_contact Contact
  createdAt        DateTime   @default(now()) @map("created_at")
  updatedAt        DateTime   @updatedAt @map("updated_at")
  @@map("patients")
}


model Diet {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  morning   String[]  @db.ObjectId
  evening   String[]  @db.ObjectId
  night     String[]  @db.ObjectId
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  @@map("diets")
}

model Meal {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  ingredients String[]
  specifications String?
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  @@map("meals")
}



type Contact {
  name   String?
  email   String
  phone   String
  address   Address
}

type Address {
  street   String
  city   String
  state   String
  zip   String
}